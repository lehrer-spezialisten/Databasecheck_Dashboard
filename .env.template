# Database Configuration - Replace with your actual values
DB_USER=REPLACE_WITH_DB_USERNAME
DB_PASSWORD=REPLACE_WITH_DB_PASSWORD
DB_HOST=REPLACE_WITH_DB_HOST
DB_PORT=3306
DB_NAME=REPLACE_WITH_DB_NAME

# SSL Configuration (choose one option below)
# Option 1: With SSL (recommended for production)
DB_SSL_CA="./ca-certificate.crt"
# Option 2: Disable SSL (for testing only, not recommended for production)
# DB_SSL_DISABLED=False

# Gmail Configuration (Required for email notifications)
GMAIL_USER=REPLACE_WITH_EMAIL@gmail.com
# Generate an App Password from your Google Account settings
# Go to: https://myaccount.google.com/apppasswords
APP_PASSWORD=REPLACE_WITH_APP_PASSWORD

# Default Alert Email (Optional - used when no specific alert email is set)
DEFAULT_ALERT_EMAIL=alerts@example.com

# ============================================================================
# Multiple Database Check Configuration (Optional)
# ============================================================================
# To check multiple databases, uncomment and configure the following section
# Format: DB_CHECK_[N]_[PARAMETER]

# [Example] Database Check 1
# DB_CHECK_1_NAME=Production DB
# DB_CHECK_1_HOST=db1.example.com
# DB_CHECK_1_PORT=3306
# DB_CHECK_1_DATABASE=production_db
# DB_CHECK_1_USER_ENV=DB1_USERNAME
# DB_CHECK_1_PASSWORD_ENV=DB1_PASSWORD
# DB_CHECK_1_TABLE_NAME=important_table
# DB_CHECK_1_ALERT_EMAIL_ENV=ALERT_EMAIL

# [Example] Database Check 2
# DB_CHECK_2_NAME=Staging DB
# DB_CHECK_2_HOST=db2.example.com
# DB_CHECK_2_PORT=5432
# DB_CHECK_2_DATABASE=staging_db
# DB_CHECK_2_USER_ENV=DB2_USERNAME
# DB_CHECK_2_PASSWORD_ENV=DB2_PASSWORD
# DB_CHECK_2_TABLE_NAME=important_data
# DB_CHECK_2_ALERT_EMAIL_ENV=ALERT_EMAIL_DEV
